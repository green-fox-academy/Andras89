@model WarehouseApp.ViewModels.ListViewDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/style.css">
    <meta name="viewport" content="width=device-width" />
    <title>Green Fox Fashion Webstore</title>
</head>
<body>
    <h1>Green Fox Fashion Webstore</h1>

    <form action="/shoppingplanner/warehouse/summary" method="post">
        <select name="ItemName">
            <option value="" disabled selected>Select Item Name</option>
            @foreach (string cloth in Model.ItemNameGroup)
            {
                <option value="@cloth">@cloth</option>
            }
        </select>
        <select name="Size">
            <option value="" disabled selected>Select Item Size</option>
            @foreach (string size in Model.ItemSizeGroup)
            {
                <option value="@size">@size</option>
            }
        </select>
        <input type="text" name="amount" value="" />
        <button type="submit">Get Total</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Manufacturer</th>
                <th>Category</th>
                <th>Size</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Warehouse cloth in Model.Wares)
            {
                <tr>
                    <td>@cloth.ItemName</td>
                    <td>@cloth.Manufacturer</td>
                    <td>@cloth.Category</td>
                    <td>@cloth.Size</td>
                    <td>@cloth.UnitPrice</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
