@model List<ToDo>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TODOS FOR TODAY</h2>

<form action="/list" method="post">
    <input type="search" name="input" value="" placeholder="Search ToDos"/>
</form>

<h3><a href="/todo/add">Add ToDos</a></h3>

<table class="table table-bordered table-responsive table-hover">
    <thead style="border: none;">
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>Assignee</th>
            <th>IsUrgent</th>
            <th>IsDone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ToDo current in Model)
        {
        <tr>
            <td>@current.Id</td>
            <td>@current.Title</td>
            <td>@current.Assignee.Name</td>
            <td>@current.IsUrgent</td>
            <td>@current.IsDone</td>
            <td><a href="/@current.Id/edit">EDIT</a></td>
            <td><a href="/@current.Id/delete">DELETE</a></td>
        </tr>
         }
        </tbody>
    </table>
