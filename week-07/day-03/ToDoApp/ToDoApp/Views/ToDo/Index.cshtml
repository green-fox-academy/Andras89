@model List<ToDo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br /><br />
<table class="table table-bordered table-responsive table-hover">
    <thead style="background-color: #3d3d3d; color: white;">
        <tr>
            <th>DONE</th>
            <th>ID</th>
            <th>CONTENT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ToDo todo in Model)
        {
            if (todo.IsUrgent)
            {
                <tr style="background-color: gold;">
                    <td>
                        <input type="checkbox" name="" value="" />
                    </td>
                    <td>@todo.Id</td>
                    <td>@todo.Content</td>
                    <td>URGENT</td>
                </tr>

            }
            else
            {
                <tr>
                    <td>
                        <input type="checkbox" name="" value="" />
                    </td>
                    <td>@todo.Id</td>
                    <td>@todo.Content</td>
                </tr>

            }

        }
    </tbody>
</table>

<br /><br />
<form action="/" method="post">
    <input type="text" name="Content" value="" placeholder="AddContent" required />
    <button type="submit">Submit</button>
</form>
<br /><br />
<form action="/remove" method="post">
    <select name="input">
        <option value="" selected disabled hidden>Choose here</option>
        @foreach (ToDo item in Model)
        {
            <option value="@item.Id">@item.Content</option>
        }
    </select>
    <button type="submit">DELETE</button>
</form>

<br /><br />

<form action="/urgent" method="post">
    <select name="input">
        <option value="" selected disabled hidden>Choose here</option>
        @foreach (ToDo item in Model)
        {
            <option value="@item.Id">@item.Content</option>
        }
    </select>
    <button type="submit">URGENT</button>
</form>

<br /><br />

<form action="/writejson" method="post">
    <button type="submit">WriteJSON</button>
</form>


